<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dip">

    <ImageView
        android:id="@+id/z_folder_picture_item_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gallery_rectangle_default"
        android:scaleType="centerCrop"
        android:src="@mipmap/bvendor" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/z_folder_picture_item_icon">

        <TextView
            android:id="@+id/z_folder_picture_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="未知"
            android:textColor="#A000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/z_folder_picture_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/z_folder_picture_item_text"
            android:layout_marginTop="15dp"
            android:text="0张"
            android:textColor="#7000"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/z_folder_picture_item_check"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/arrow_success"
        android:visibility="invisible" />

</RelativeLayout>